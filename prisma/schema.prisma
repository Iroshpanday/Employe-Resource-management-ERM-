generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model Department {
  id       Int      @id @default(autoincrement())
  name     String
  location     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  branches BranchDepartment[]
}

model Branch {
  id           Int       @id @default(autoincrement())
  name         String
  location     String?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  
  departments BranchDepartment[]
}
model BranchDepartment {
  id            Int      @id @default(autoincrement())
  
  branchId      Int
  branch        Branch   @relation(fields: [branchId], references: [id])

  departmentId  Int
  department    Department @relation(fields: [departmentId], references: [id])

  // This ensures that the combination of a branch and a department is unique.
  @@unique([branchId, departmentId])
  employees     Employee[]
}

model Employee {
  id           Int              @id @default(autoincrement())
  firstName    String
  lastName     String
  email        String           @unique
  phone        String?
  hireDate     DateTime         @default(now())
  position     String
  cvFile       String?          // local file path

  // Relations
  branchDeptId Int
  branchDept   BranchDepartment @relation(fields: [branchDeptId], references: [id])

  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
}

